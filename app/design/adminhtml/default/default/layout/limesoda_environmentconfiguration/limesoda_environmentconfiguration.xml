<?xml version="1.0" encoding="UTF-8"?>
<layout>
    <default>
        <reference name="head">
            <action method="addJs" ifconfig="admin/limesoda_environmentconfiguration_options/display_environment_notice_bar"><name>limesoda_environmentconfiguration/notice.js</name></action>
            <action method="addCss" ifconfig="admin/limesoda_environmentconfiguration_options/display_environment_notice_bar"><name>limesoda_environmentconfiguration/notice.css</name></action>
        </reference>
    </default>
    <adminhtml_limesoda_environmentconfiguration_index>
        <reference name="head">
            <action method="addCss"><name>limesoda_environmentconfiguration/overview.css</name></action>
        </reference>
        <reference name="content">
            <block type="limesoda_environmentconfiguration/adminhtml_overview" name="limesoda_environmentconfiguration.overview"
                   template="limesoda_environmentconfiguration/overview.phtml"/>
        </reference>
    </adminhtml_limesoda_environmentconfiguration_index>
</layout>
